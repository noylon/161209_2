<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <TextView
        android:text="인원 예약"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.22" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:text="어른 15000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adult"
            android:layout_weight="1" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pizza_val"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="학생 12000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/student"
            android:layout_weight="1" />

        <EditText
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/spagetti_val"
            android:layout_weight="0.02" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="어린이 8000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/child"
            android:layout_weight="1" />

        <EditText
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/salad_val" />

    </LinearLayout>

    <CheckBox
        android:text="기본할인 5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/basic"
        android:layout_weight="0.22" />

    <CheckBox
        android:text="현금할인 10%할인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cash"
        android:layout_weight="0.22" />

    <CheckBox
        android:text="membership card(20% DC)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/membership" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.08">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_weight="0.20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView1"
            android:layout_weight="0.01" />

        <Button
            android:text="Order"
            android:layout_width="wrap_content"
            android:layout_height="143dp"
            android:id="@+id/order"
            android:layout_weight="0.05" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_val"
        android:layout_weight="0.22" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_cost"
        android:layout_weight="0.26" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_option"
        android:layout_weight="0.26" />

</LinearLayout>